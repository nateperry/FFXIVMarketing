<div class="container">
    <div class="grid">
        <div class="col">
            <h2>New User</h2>
            <form id="new-user-form" autocomplete="off" method="POST">
                {{#each errors}}
                    <p class="form-error">{{this}}</p>
                {{/each}}
                <label for="user-email">
                    <span class="label-text">Email</span>
                    <input id="user-email" name="email" type="email" value="{{user.email}}" required autofocus />
                </label>
                <label for="user-password">
                    <span class="label-text">Password</span>
                    <input id="user-password" name="password" type="password" required />
                </label>
                <label for="user-password">
                    <span class="label-text">Confirm Password</span>
                    <input id="user-password" name="conf_password" type="password" required />
                </label>
                <input type="submit" value="Submit" class="button-large" />
            </form>
        </div>
        <div class="col"></div>
    </div>
</div>