<div class="container">
    <div class="grid">
        <div class="col">
            <h2>New User</h2>
            <form id="new-user-form" autocomplete="off" method="POST">
                {{#if error}}
                    <p class="form-error">{{error}}</p>
                {{/if}}
                <label for="user-email">
                    <span class="label-text">Email</span>
                    <input id="user-email" name="email" type="email" value="{{user.email}}" autofocus />
                </label>
                <label for="user-password">
                    <span class="label-text">Password</span>
                    <input id="user-password" name="password" type="password" />
                </label>
                <input type="submit" value="Submit" class="button-large" />
            </form>
        </div>
    </div>
</div>